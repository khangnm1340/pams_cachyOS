[Unit]
Description=Rclone sync Google Drive (btl) at startup
After=network-online.target

[Service]
Type=oneshot
ExecStart=/home/pampam/.config/hypr/scripts/rclone-sync-btl.sh
# Optional: prevent network issues from breaking startup
ExecStartPre=/usr/bin/sleep 10
# Log output to journal
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
